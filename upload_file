import tkinter as tk
from tkinter import filedialog
import requests

# Function to handle the file upload
def upload_file():
    file_path = filedialog.askopenfilename(title="Select Image File")
    if file_path:
        url = 'http://example.com/upload'  # Replace 'http://example.com/upload' with your upload endpoint
        files = {'file': open(file_path, 'rb')}
        response = requests.post(url, files=files)
        if response.status_code == 200:
            status_label.config(text="Upload successful")
        else:
            status_label.config(text="Upload failed")

# Create the main window
root = tk.Tk()
root.title("Image Uploader")

# Create a button to upload the image
upload_button = tk.Button(root, text="Upload Image", command=upload_file)
upload_button.pack(pady=20)

# Create a label to show the upload status
status_label = tk.Label(root, text="")
status_label.pack()

# Run the main loop
root.mainloop()
